<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input Title -->
    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter song title"
        android:inputType="text" />

    <!-- Input Artist -->
    <EditText
        android:id="@+id/artistEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter artist name"
        android:inputType="text" />

    <!-- Input Album -->
    <EditText
        android:id="@+id/albumEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter album name"
        android:inputType="text" />

    <!-- ImageView for album image -->
    <ImageView
        android:id="@+id/albumImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="Album Image" />

    <!-- Button to select album image -->
    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Album Image"
        android:layout_marginTop="16dp"/>

    <!-- Button to select audio file -->
    <Button
        android:id="@+id/selectAudioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Audio File"
        android:layout_marginTop="16dp"/>

    <!-- Button to upload song -->
    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Song"
        android:layout_marginTop="16dp"/>

</LinearLayout>
